#!/usr/bin/env zsh

name=$(basename $0)

# ------------------------------

source "$(which _log)"

# ------------------------------

_bsp_fullscreen() {

  if [ -z "$(bspc query -N -n .focused.fullscreen -d focused)" ]; then
  
    log-info "tiled to fullscreen"
    bspc node focused.tiled -t fullscreen
  
  else
    
    log-info "fullscreen to tiled"
    bspc node focused.fullscreen -t tiled
  
  fi

}

# ------------------------------

_bsp_fullscreen "$@"