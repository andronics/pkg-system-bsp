#!/usr/bin/env zsh

name=$(basename $0)

# ------------------------------

source "$(which _log)"
source "$(which _xdg)" >/dev/null 2>&1 || true

# ------------------------------

# Setup XDG directories using extension library
xdg-setup-dirs "${name}"

# Backward-compatible aliases
bsp_shroud_cache_dir="${XDG_CACHE_DIR}"
bsp_shroud_config_dir="${XDG_CONFIG_DIR}"
bsp_shroud_data_dir="${XDG_DATA_DIR}"

# ------------------------------

source "$(which _args)"

# ------------------------------

_bsp_shroud() {
    
    [[ $# -eq 0 ]] && {
        log-error "command not specified"
        return 1
    }

    _command=$1
    shift 2>/dev/null

    case "${_command}" in
        
        cover) _bsp_shroud_cover "$@" ;;
        reveal) _bsp_shroud_reveal "$@" ;;

        *) log-warning "command '%s' unsupported" "${_command}" ;;

    esac
}

# ------------------------------

_bsp_shroud_cover() {

    [[ `pgrep "polybar"` ]] && {
        log-debug "covering polybar"
        polybar-msg cmd hide
    }

    _nodes=$(bspc query -N -n .leaf -d focused)

    for _node in ${_nodes}; do
        log-info "covering node '%s'" "${_node}"
        bspc node "${_node}" -g hidden=on
    done

}

_bsp_shroud_reveal() {

    [[ `pgrep "polybar"` ]] && {
        log-debug "reveaing polybar"
        polybar-msg cmd show
    }

    _nodes=$(bspc query -N -n .leaf -d focused)

    for _node in ${_nodes}; do
        log-info "revealing node '%s'" "${_node}"
        bspc node "${_node}" -g hidden=off
    done

}

# ------------------------------

_bsp_shroud "$@"